<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="32dp"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:text="Aplikasi Saya"/>

    <LinearLayout
        android:layout_below="@+id/tv_title"
        android:background="@drawable/shape_white_round"
        android:layout_marginTop="50dp"
        android:padding="16dp"
        android:id="@+id/v_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="4dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"/>

        <EditText
            android:id="@+id/et_username"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/shape_grey_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Your User Name"/>

        <TextView
            android:layout_marginBottom="4dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"/>

        <EditText
            android:id="@+id/et_password"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/shape_grey_round"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Your Password"/>


        <Button
            android:id="@+id/btn_login"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_blue_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            />
    </LinearLayout>

</RelativeLayout>